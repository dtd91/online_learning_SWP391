@using PagedList.Core.Mvc
@using SWP391_OnlineLearning_Platform.Models;
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "BlogList";
    var count = 0;
}
@model PagedList.Core.IPagedList<SWP391_OnlineLearning_Platform.Models.Blog>


<div class="page-heading text-center">
    <div class="container">
        <h2>OUR BLOG</h2>
    </div>
</div>
<div class="container">
    <div class="row">

        @*CATEGORY*@
        <div>
            <p>
                Sorted by:
                <select class="custom-select"  id="categoryList" name="categoryList" asp-items="ViewBag.selectedCategory"  style="padding:9px 15px; border-radius:10px;">
                    <option selected disabled>---Category---</option>
                    <option value="0">All</option>
                </select>
            </p>
        </div>
        <br/>

        <div class="col-lg-9">
            @if (Model == null)
            {
                <h1>No information</h1>
            }
            @foreach (var item in Model)
            {
                <div class="blog-item clearfix">
                    <a asp-controller="publicfeature" asp-action="BlogDetail" asp-route-id="@item.Id">
                        <img src="~/img/@Html.DisplayFor(modelItem => item.Thumbnail)" alt="blog-single" class="img-thumbnail" style="width: 871px; height: 401px; object-fit: cover; object-position: 50% 50%;">
                    </a>
                    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                    <div class="author">
                        <a href="#">@Html.DisplayFor(modelItem => item.Category.Value)</a><span> - @Html.DisplayFor(modelItem => item.Date) BY @Html.DisplayFor(modelItem => item.User.Full_Name)</span>
                    </div>
                    <p class="abs">
                        @Html.DisplayFor(modelItem => item.Brief)
                    </p>
                    <a asp-controller="publicfeature" asp-action="BlogDetail" asp-route-id="@item.Id" class="pull-right greybutton">READ MORE</a>
                </div>}
            <h3>Trang số: @CurrentPage</h3>
            <ul class="pagination">
                <pager list="@Model" asp-route-CatID="@ViewBag.CurrentCateID" asp-controller="publicfeature" asp-action="bloglist" />
                 
            </ul>
        </div>



        <div class="col-lg-3 blog-sidebar">
            @*SEARCH BAR*@
            <div class="search-something">
                <form asp-controller="PublicFeature" asp-action="bloglist">
                    <a class="search" onclick="this.form.submit();"><i class="zmdi zmdi-search zmdi-hc-lg"></i></a>
                    <div class="search-something">
                        <input type="text" name="searchString" placeholder="search for something">
                    </div>
                </form>
            </div>
            <h4>RECENT POSTS</h4>

            @foreach (var item in ViewData["recentBlogs"] as List<Blog>)
            {
                ++count;
                if (count <= 5)
                {
                    <div class="recent-post clearfix">
                        <img src="~/img/@Html.DisplayFor(modelItem => item.Thumbnail)" alt="recent" class="pull-left" style="width: 70px; height: 70px; object-fit: cover; object-position: 50% 50%;">
                        <a asp-controller="publicfeature" asp-action="BlogDetail" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                        <div class="author">
                            <a href="#">@Html.DisplayFor(modelItem => item.Category.Value)</a><span> @Html.DisplayFor(modelItem => item.Date)</span>
                        </div>
                    </div>}
            }


            <div class="categories">
                <h6>CATEGORIES</h6>
                <ul>
                    @foreach (var item in ViewData["category"] as List<Category>)
                    {
                        <li><a asp-route-CatID="@item.Id" asp-controller="publicfeature" asp-action="bloglist" >@Html.DisplayFor(modelItem => item.Value)</a></li>
                    }
                </ul>
            </div>

        </div>

    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            jQuery("#categoryList").change(function(){
                var catID = jQuery(this).children(":selected").attr("value");
                $("#categoryList option").removeAttr("selected");
                $("#categoryList option > [value=" + catID + "]").attr("selected", "true");
                $.ajax({
                    url: '/publicfeature/filter',
                    dataType: 'json',
                    type: 'GET',
                    data: {
                        CatID: catID
                    },
                    async: true,
                    success: function (results) {
                        if (results.status == "success") {
                            window.location.href = results.redirectUrl;
                        }
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
        });
    </script>
}