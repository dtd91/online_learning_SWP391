@model SWP391_OnlineLearning_Platform.Models.User

<div class="col-md-3">
    <div class="profile-sidebar">
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic">
            <img class="img-responsive" src="~/img/@Model.Avatar_Url" />
        </div>
        <!-- END SIDEBAR USERPIC -->
        <!-- SIDEBAR USER TITLE -->
        <div class="profile-usertitle">
            <div class="profile-usertitle-name">
                @Model.Full_Name
            </div>
            <div class="profile-usertitle-job">
                Student
            </div>
        </div>
        <!-- END SIDEBAR BUTTONS -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
            <ul class="nav">
                <li>
                    <a asp-action="userProfile" asp-route-id="@Model.Id">
                        <i class="glyphicon glyphicon-home"></i>
                        Profile
                    </a>
                </li>
                <li>
                    <a asp-action="editProfile" asp-route-id="@Model.Id">
                        <i class="glyphicon glyphicon-pencil"></i>
                        Edit Profile
                    </a>
                </li>
                <li>
                    <a asp-action="changePassword" asp-route-id="@Model.Id">
                        <i class="glyphicon glyphicon-briefcase"></i>
                        Change Password
                    </a>
                </li>
                <li>
                    <a asp-action="changePhoto" asp-route-id="@Model.Id">
                        <i class="glyphicon glyphicon-picture"></i>
                        Change Photo
                    </a>
                </li>
            </ul>
        </div>
        <!-- END MENU -->
    </div>
</div>
