
@model IEnumerable<SWP391_OnlineLearning_Platform.Models.Price_Package>
@{
    ViewData["Title"] = "CourseRegister";
    var courseId = ViewBag.CourseId;
    var userId = ViewBag.UserId;
}

<main>

    <div class="page-heading text-center">
        <div class="container">
            <h2>PRICING PLANS</h2>
        </div>
    </div>
    <div class="container pricings">
        <div class="row text-center">
            <form>
            </form>
            @foreach (var p in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="plan">
                        <p class="ribbon">MOST POPULAR</p>
                        <p class="price">@p.List_price</p>
                        <p class="crew">@p.Name</p>
                        <div class="plan-details">
                            <p>Unlimited Courses</p>
                            <p>Online pass purchases</p>
                            <p>Online class reservations</p>
                            <p>Full Library Entry</p>
                            <p>Promo Code feature</p>
                        </div>
                        <form method="post" asp-action="CourseRegister">
                            @*<a href="#"><i class="zmdi zmdi-arrow-right"></i>FREE TRIAL</a>*@
                            <button type="submit" asp-action="CourseRegister" asp-controller="Course" asp-route-priceId="@p.Id" asp-route-courseId="@courseId" asp-route-userId="@userId"><i class="zmdi zmdi-arrow-right"></i>ORDER NOW</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>

</main>

