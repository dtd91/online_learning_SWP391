
@{
    ViewData["Title"] = "changePhoto";
}
@model SWP391_OnlineLearning_Platform.Models.User



<div class="container">
    <div class="row profile">

        @await Html.PartialAsync("~/Views/Shared/_UserProfilePartial.cshtml", Model)

        <div class="col-md-9">
            <div class="profile-content">
                <div class="text-center">
                    <h3 style="margin-top:20px">CHANGE PHOTO</h3>
                </div>
                <div class="col-md-12">
                    <form method="post" asp-action="changePhoto" enctype="multipart/form-data">
                        <input asp-for="@Model.Id" disabled hidden/>
                        <div class="form-group">
                            <label for="Avatar_Url" class="form-label">Default file input example</label>
                            <input asp-for="Avatar_Url" class="form-control" type="text" >
                        </div>
                        <div class="form-group">
                            <input type="submit" value="SAVE" class="btn btn-success" style="margin-left:35%; padding:5px 20px" />
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

