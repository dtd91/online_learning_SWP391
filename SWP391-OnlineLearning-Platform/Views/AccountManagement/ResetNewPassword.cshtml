</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="myform form ">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h2>RESET PASSWORD</h2>
                        </div>
                        <div class="col-md-8" style="margin-left: 18%;">
                            <form action="#" name="registration">
                                <div class="form-group" style="margin-bottom: 5px;">
                                    <label for="newPassword" style="font-weight: bold;">Enter new Password: </label>
                                    <div class="input-group-append">
                                        <input style="width: 90%;" type="password" name="newPassword" id="newPassword" class="form-control" aria-describedby="emailHelp" placeholder="Enter Your Password" />
                                        <span class="input-group-text" onclick="password_show_hide('newPassword');">
                                            <i class="fas fa-eye" id="show_eye"></i>
                                            <i class="fas fa-eye-slash d-none" id="hide_eye"></i>
                                        </span>
                                    </div>
                                </div>
                                <p style="color: #666; font-weight: 400;">The password should have atleast 8 characters</p>

                                <div class="form-group">
                                    <label for="confirmNewPassword" style="font-weight: bold;">Confirm new Password: </label>
                                    <input type="password" name="confirmNewPassword" id="confirmNewPassword" class="form-control" aria-describedby="emailHelp" placeholder="Confirm Your Password">


                                </div>
                                <div class="col-md-12 text-center mb-3">
                                    <button type="submit" id="sendBtn" class=" btn btn-block mybtn btn-primary tx-tfm" style="background-color: #1db954;border: 1px black;">CONFIRM</button>
                                </div>
                                <div class="col-md-12 ">
                                    <div class="form-group">
                                        <p class="text-center"><a href="#" id="signin">Dont get email?</a></p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>

<script>
    $(function() {
        $("form[name='registration']").validate({
            rules: {
                password: {
                    required: true,
                    minlength: 8
                }
            },

            messages: {
                password: {
                    required: "Please provide a password",
                    minlength: "Your password must be at least 8 characters long"
                },
            },

            submitHandler: function(form) {
                form.submit();
            }
        });
    });

    function password_show_hide(c) {
        var x = document.getElementById(c);
        var show_eye = document.getElementById("show_eye");
        var hide_eye = document.getElementById("hide_eye");
        hide_eye.classList.remove("d-none");
        if (x.type === "password") {
            x.type = "text";
            show_eye.style.display = "none";
            hide_eye.style.display = "block";
        } else {
            x.type = "password";
            show_eye.style.display = "block";
            hide_eye.style.display = "none";
        }
    }
</script>

</html>