
@{

    ViewData["Title"] = "editProfile";
}
@model SWP391_OnlineLearning_Platform.Models.User



<div class="container">
    <div class="row profile">

        @await Html.PartialAsync("~/Views/Shared/_UserProfilePartial.cshtml", Model)

        <div class="col-md-9">
            <div class="profile-content">
                <div class="text-center">
                    <h3 style="margin-top:20px">EDIT PROFILE</h3>
                </div>
                <form method="post" asp-action="editProfile" onsubmit="return confirm('Are you sure?');">
                    <input asp-for="Id" disabled hidden>

                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Full_Name" class="control-label"></label>
                        <input asp-for="Full_Name" class="form-control" />
                        <span asp-validation-for="Full_Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control">
                            <option selected>--Gender--</option>
                            <option value="1">Male</option>
                            <option value="0">Female</option>
                            <option value="2">Non-binary</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dob" class="control-label"></label>
                        <input asp-for="Dob" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" disabled class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-danger" />
                        <a asp-action="userProfile" asp-route-id="@Model.Id" class="btn btn-success">Cancel</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<script>
    function MyFunct() {
        if (document.getElementById('Password').value == @Model.Password) {
            var x = window.confirm("Are you sure?");
            if (x == true) {
                document.getElementById("editProfile").value.submit();
            }
        }
        else {
            document.getElementById("ErrorMess").innerHTML = "Password is not correct";
        }
    }
</script>

