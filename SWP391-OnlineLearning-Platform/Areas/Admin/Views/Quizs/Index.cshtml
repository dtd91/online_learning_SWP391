@model IEnumerable<SWP391_OnlineLearning_Platform.Models.Quiz>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count=0;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr style="font-weight:bold;">
            <td>No.</td>
            <td>Subject</td>
            <td>
                Quiz Name
            </td>
            <td>
                Quiz ID
            </td>
            <td>
                Level
            </td>
            <td>
                Total Question
            </td>
            <td>
                Duration
            </td>
            <td>
                Pass Rate
            </td>
            <td>
                Quiz Type
            </td>
            <td>
                Action
            </td>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@(count++)</td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quiz_Level.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number_question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pass_rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quiz_Type.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Description)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
