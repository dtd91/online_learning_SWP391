    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var mdo = "";
    var fat = "";
    var getbootstrap = "";
}
<h1>Details</h1>

<div>
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number_question)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number_question)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pass_rate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pass_rate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz_Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz_Level.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz_Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz_Type.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Setting</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Setting</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group  col-md-12">
                        <label asp-for="Number_question" class="control-label"></label>
                        <input asp-for="Number_question" value="@Model.Number_question" class="form-control" />
                        <span asp-validation-for="Number_question" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="message-text" class="col-form-label">Lựa chọn số câu hỏi theo level</label>
                        <label asp-for="Quiz_Level_Id" class="control-label"></label>
                        <select asp-for="Quiz_Level_Id" class="form-control" asp-items="ViewBag.Quiz_Level_Id"></select>
                        <span asp-validation-for="Quiz_Level_Id" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <br/>
                        <label asp-for="Number_question" class="control-label"></label>
                        <input asp-for="Number_question" value="@Model.Number_question" class="form-control" />
                        <span asp-validation-for="Number_question" class="text-danger"></span>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('#exampleModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var recipient = button.data('whatever') // Extract info from data-* attributes
            // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
            // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $(this)
            modal.find('.modal-title').text('New message to ' + recipient)
        })
    </script>
}