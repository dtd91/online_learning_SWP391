@model IEnumerable<SWP391_OnlineLearning_Platform.Models.Question_Bank>

@{
    ViewData["Title"] = "QuestionList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}

<h2>Question List</h2>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="Import">| Import File</a>
</p>
<form asp-controller="QuestionBank" asp-action="QuestionList">
    <div class="search-something">
        <input type="text" name="keyWord" placeholder="search for something">
        <input type="submit" value="Search">
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                No.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quiz_Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(++count)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quiz_Level.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Value)
                </td>
                <td>
                    <a asp-action="QuestionDetail" asp-route-id="@item.Id">Update</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
