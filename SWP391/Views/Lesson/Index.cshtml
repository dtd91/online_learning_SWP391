<style>
    .accordion .collapse .card-body .vid video {
        width: 100px;
        border-radius: 5px;
    }
</style>

<script>
    let ListVideo = document.querySelectorAll('.list-group .list-group-item');
    let MainVideo = document.querySelector('.row .col-md-8 video');
    let Title = document.querySelector('.row .col-md-8 .title');

    ListVideo.forEach(video => {
        video.onclick = () => {
            ListVideo.forEach(vid => vid.classList.remove('active'));
            video.classList.add('active');
            if (video.classList.contains('active')) {
                let src = video.children[1].getAttribute('href');
                MainVideo.src = src;
                //let title = video.children[1].innerHTML;
                //Title.innerHTML = title;
            };
        };
    });
</script>


